---
import { getCollection } from 'astro:content';
import BaseBlogPost from '../../layouts/BaseBlogPost.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('mahabharat');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---
<BaseBlogPost frontmatter={entry.data} title={entry.data.title} description={entry.data.description} date={entry.data.date}>
    {entry.data.tags && entry.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-brutalist-xl">
        {entry.data.tags.map((tag) => (
          <a href={`/tags/${tag}`} class="font-mono text-brutalist-xs px-2 py-1 border border-brutalist-border text-brutalist-border uppercase tracking-wide hover:border-brutalist-orange hover:text-brutalist-bg hover:bg-brutalist-orange hover:text-brutalist-bg transition-colors no-underline">
            #{tag}
          </a>
        ))}
      </div>
    )}
    <Content />
</BaseBlogPost>