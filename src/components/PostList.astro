---
import type { CollectionEntry } from 'astro:content'
import PostDate from '@/components/PostDate.astro'
import { defaultLocale } from '@/config'
import { isTagPage } from '@/utils/page'

// Define content types
type Post = CollectionEntry<'posts'> & { remarkPluginFrontmatter: { minutes: number }}
type Poem = CollectionEntry<'poems'> & { remarkPluginFrontmatter: { minutes: number }}
type Mahabharat = CollectionEntry<'mahabharat'> & { remarkPluginFrontmatter: { minutes: number }}

// Props
export interface Props { posts: Post[] | Poem[] | Mahabharat[]; lang?: string; pinned?: boolean }
const { posts, lang = defaultLocale, pinned = false } = Astro.props as Props
const isTag = isTagPage(Astro.url.pathname)

// Build URL path for any content type
function getPostPath(post: Post | Poem | Mahabharat) {
  const slug = post.data.abbrlink || post.id
  const base = post.collection === 'posts'
    ? '/posts'
    : post.collection === 'mahabharat' ? '/mahabharat' : '/poems'
  return lang && lang !== defaultLocale ? `/${lang}${base}/${slug}/` : `${base}/${slug}/`
}

// Generate description for any content type
function generateDesc(post: Post | Poem | Mahabharat) {
  return post.data.description || ''
}
---

<ul>
  {posts.map(post => (
    <li class="mb-5.5" lg={isTag ? '' : 'mb-10'}>

      <h3 class="inline">
        <a
          class="hover:c-primary" lg={isTag ? '' : 'font-medium text-4.5'}
          href={getPostPath(post)}
          transition:name={`post-${post.data.abbrlink || post.id}-${lang}`}
          data-disable-transition-on-theme
        >
          {post.data.title}
        </a>

        {pinned && (
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true"
               class="ml-1 inline-block aspect-square w-3.7 shrink-0 translate-y--0.45 lg:(ml-1.2 w-4.1)" fill="currentColor">
            <path d="M16.5 23.6c.6-6.1 1.1-8.6 7.2-15.5L15.9.4C9 6.5 6.5 7 .4 7.5l7.4 7.4-6.4 7 .7.7 7-6.4zm-.8-21.3 6 6c-5 6.1-5.7 8.1-6.2 12.2L3.4 8.5C7.5 8 9.5 7.3 15.6 2.3Z" />
          </svg>
        )}
      </h3>

      <div class="text-3.5 leading-6.875 font-time lg:hidden"
           transition:name={`time-${post.data.abbrlink || post.id}-${lang}`}
           data-disable-transition-on-theme>
        <PostDate date={post.data.published} minutes={post.remarkPluginFrontmatter.minutes} />
      </div>

      <div class="hidden text-3.65 leading-6.875 font-time lg:(ml-2.5 inline)">
        <PostDate date={post.data.published} minutes={post.remarkPluginFrontmatter.minutes} />
      </div>

      {!isTag && (
        <div class="heti hidden" lg="mt-2 block">
          <p>{generateDesc(post)}</p>
        </div>
      )}

    </li>
  ))}
</ul>
